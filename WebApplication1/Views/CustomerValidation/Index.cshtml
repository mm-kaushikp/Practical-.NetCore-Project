@model WebApplication1.Models.customerValidation

@{
    ViewBag.Title = "Index";
}
<style>
    .div-padding {
        padding: 18px;
    }
</style>

<h2>Customer Validation</h2>
@using (Html.BeginForm())
{
    <div class="table-bordered div-padding">
        <br />
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Comment:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.comment, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.comment, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-md-8 text-center">
                <input type="submit" value="Submit" name="btnClick" class="btn btn-primary btn-mrg" />
                <input type="submit" value="Reset" name="btnClick" class="btn btn-warning" />
            </div>
        </div>
        <br />
    </div>
}