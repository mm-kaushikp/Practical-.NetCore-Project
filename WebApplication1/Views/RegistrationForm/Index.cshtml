@model WebApplication1.Models.registrationForm
@{
    ViewBag.Title = "RegisterForm";
}
<style>
    .div-mrg-padding {
        margin: 15px;
        padding: 15px;
    }
</style>
@using (Html.BeginForm())
{
    <div class="div-mrg-padding">
        <div class="row">
            <div class="col-md-2">
                @Html.Label("First Name:")
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Last Name:")
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("BirthDate:")
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.BirthDate, htmlAttributes: new { @class = "form-control", @type = "date" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Address:")
            </div>
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Address, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Zip Code:")
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Zipcode, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Country:")
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Country, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                <input type="submit" value="Register" class="btn btn-primary" name="btnclick" />
                <input type="submit" value="Reset" class="btn btn-dark" name="btnclick" />
            </div>
        </div>
    </div>

    <br />
    if (ViewBag.result != null)
    {
        <div class="table-bordered div-mrg-padding">
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("First Name")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.FirstName
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Last Name")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.LastName
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("BirthDate")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.BirthDate.ToString("dd/MM/yyyy")
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Address")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Address
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("ZipCode")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Zipcode
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Country")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Country
                </div>
            </div>
        </div>
    }
}
